<div class="contents row">
  <% @diaries.each do |diary| %>
    <div class="content_post">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', diary_path(diary.id), method: :delete %>
          </li>
        </ul>
      </div>
      <%= diary.datetime.strftime("%Y/%-m/%-d %H:%M") %><br>
      <%= diary.content %><br>
      <img src="<%= diary.image %>" style="max-width: 300px; max-height: 250px;"><br>
      <%= diary.emotion %><br>
      元気度 <%= diary.score %>％<br><br>
    </div>
  <% end %>
</div>